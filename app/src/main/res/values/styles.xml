<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textViewStyle">@style/myTextView</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <item name="fontFamily">@font/open_sans</item>
        <item name="editTextStyle">@style/myEditText</item>
    </style>
    <style name="myEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/app_text</item>
        <item name="backgroundTint">@color/app_lighttext</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="textInputEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/app_text</item>
        <item name="backgroundTint">@android:color/white</item>
        <item name="android:background">@drawable/icon_button_9p</item>
        <item name="android:inputType">text|textMultiLine</item>

    </style>
    <style name="myTextView">
        <item name="android:textColor">@color/app_text</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>
    <style name="mySmallTextView">
        <item name="android:textColor">@color/app_text</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>
    <style name="myBigTextView">
        <item name="android:textColor">@color/app_text</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>
    <style name="TabTheme">
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
    </style>
</resources>
