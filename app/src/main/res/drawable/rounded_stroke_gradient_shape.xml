<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
<item>
    <shape android:shape="rectangle" >
        <gradient
            android:angle="0"
            android:startColor="#627ce8" android:endColor="#764ea5">
        </gradient>


        <corners
            android:radius="24dp"   >
        </corners>
    </shape>
</item>
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle" >
            <solid android:color="#fff" />
            <corners
                android:radius="24dp"   >
            </corners>
        </shape>
    </item>
</layer-list>